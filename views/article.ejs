<%- include("partials/header") -%>

<section class="index-section">
    <h1>Article</h1>
    <div class="articles-container">
        <div class="d-inline-flex"> 
            <div class="published-container mt-5">
                <div class="row">
                    <div class="col">
                        <h2><%= foundArticle.title %></h2>
                        <div class="article-content">
                            <p><%= foundArticle.content %></h2>
                        </div>

                        <a class="btn btn-primary" href="/articles">Go back</a>

                    <form method="DELETE" action="/articles/:articleID">                        
                        <button class="btn btn-danger" name="articleId" value="<%= foundArticle.id %>">Delete</button>
                    </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("partials/footer") -%>